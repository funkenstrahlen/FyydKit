# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'

def shared_pods
  pod 'Alamofire'
  pod 'CodableAlamofire'
end

target 'FyydKit-iOS' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for FyydKit-iOS
  shared_pods

  target 'FyydKit-iOS Tests' do
    inherit! :search_paths
    # Pods for testing
  end

end

target 'FyydKit-macOS' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for FyydKit-macOS
  shared_pods

  target 'FyydKit-macOS Tests' do
    inherit! :search_paths
    # Pods for testing
  end

end

target 'FyydKit-tvOS' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for FyydKit-tvOS
  shared_pods

  target 'FyydKit-tvOS Tests' do
    inherit! :search_paths
    # Pods for testing
  end

end

target 'FyydKit-watchOS' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for FyydKit-watchOS
  shared_pods

end
